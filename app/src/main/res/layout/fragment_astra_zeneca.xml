<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="pmf.unsa.imunizacija.AstraZeneca">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:fitsSystemWindows="true"
                app:collapsedTitleTextAppearance="@style/Theme.AppCompat.NoActionBar"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleTextAppearance="@style/Theme.AppCompat.NoActionBar"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|end"
                    android:scaleType="centerCrop"
                    android:src="@drawable/astrazeneca_img"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_shape"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="100dp">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/descriptionVacc"
                    android:text="@string/AstraZeneca1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView17"
                    style="@style/titleVacc"
                    android:text="@string/AstraZeneca2"
                    app:layout_constraintEnd_toEndOf="@+id/textView3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView19"
                    style="@style/descriptionVacc"
                    android:text="@string/AstraZeneca3"
                    app:layout_constraintEnd_toEndOf="@+id/textView17"
                    app:layout_constraintStart_toStartOf="@+id/textView17"
                    app:layout_constraintTop_toBottomOf="@+id/textView17" />

                <TextView
                    android:id="@+id/textView20"
                    style="@style/titleVacc"
                    android:text="@string/AstraZeneca4"
                    app:layout_constraintEnd_toEndOf="@+id/textView19"
                    app:layout_constraintStart_toStartOf="@+id/textView19"
                    app:layout_constraintTop_toBottomOf="@+id/textView19" />

                <TextView
                    android:id="@+id/textView21"
                    style="@style/descriptionVacc"
                    android:text="@string/AstraZeneca5"
                    app:layout_constraintEnd_toEndOf="@+id/textView20"
                    app:layout_constraintStart_toStartOf="@+id/textView20"
                    app:layout_constraintTop_toBottomOf="@+id/textView20" />

                <TextView
                    android:id="@+id/textView22"
                    style="@style/titleVacc"
                    android:layout_width="match_parent"
                    android:text="@string/AstraZeneca6"
                    app:layout_constraintTop_toBottomOf="@+id/textView21"
                    tools:layout_editor_absoluteX="30dp" />

                <TextView
                    android:id="@+id/textView23"
                    style="@style/descriptionVacc"
                    android:layout_width="match_parent"
                    android:text="@string/AstraZeneca7"
                    app:layout_constraintTop_toBottomOf="@+id/textView22"
                    tools:layout_editor_absoluteX="62dp" />

                <TextView
                    android:id="@+id/textView24"
                    style="@style/titleVacc"
                    android:layout_width="match_parent"
                    android:text="@string/AstraZeneca8"
                    app:layout_constraintTop_toBottomOf="@+id/textView23"
                    tools:layout_editor_absoluteX="30dp" />

                <TextView
                    android:id="@+id/textView25"
                    style="@style/descriptionVacc"
                    android:layout_width="match_parent"
                    android:text="@string/AstraZeneca9"
                    app:layout_constraintTop_toBottomOf="@+id/textView24"
                    tools:layout_editor_absoluteX="30dp" />

                <TextView
                    android:id="@+id/textView26"
                    style="@style/titleVacc"
                    android:layout_width="match_parent"
                    android:text="@string/AstraZeneca10"
                    app:layout_constraintTop_toBottomOf="@+id/textView25"
                    tools:layout_editor_absoluteX="30dp" />

                <TextView
                    android:id="@+id/textView27"
                    style="@style/descriptionVacc"
                    android:layout_width="match_parent"
                    android:text="@string/AstraZeneca11"
                    app:layout_constraintTop_toBottomOf="@+id/textView26"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView282"
                    style="@style/titleVacc"
                    android:layout_width="match_parent"
                    android:text="@string/AstraZeneca12"
                    app:layout_constraintTop_toBottomOf="@+id/textView27"
                    tools:layout_editor_absoluteX="16dp" />

                <TextView
                    android:id="@+id/textView29"
                    style="@style/descriptionVacc"
                    android:layout_width="match_parent"
                    android:text="@string/AstraZeneca13"
                    app:layout_constraintTop_toBottomOf="@+id/textView282"
                    tools:layout_editor_absoluteX="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>